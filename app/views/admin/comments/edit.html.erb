<% content_for :head do %>
  <%= stylesheet_link_tag "admin_posts.css", "data-turbo-track": "reload" %>
<% end %>
<!-- Sidebar -->
<%= render 'admin/shared/sidebar'%>
<!-- Main Content -->
<div class="main-content">
  <!-- Top Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <button class="btn d-lg-none me-3" type="button" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
      </button>
      <span class="navbar-brand mb-0 h1">Comments Management</span>
      <div class="ms-auto">
        <div class="dropdown">
          <button class="btn btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
            <i class="fas fa-user-circle me-2"></i>Admin
          </button>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
            <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
  <!-- Content -->
  <div class="content-wrapper">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to "Home", admin_dashboard_path, style: "color: var(--primary-color); text-decoration: none;" %></li>
        <li class="breadcrumb-item"><%= link_to "Posts", admin_posts_index_path, style: "color: var(--primary-color); text-decoration: none;" %></li>
        <li class="breadcrumb-item"><%= link_to @post.title, admin_post_path(@post), style: "color: var(--primary-color); text-decoration: none;" %></li>
        <li class="breadcrumb-item active" aria-current="page">Edit Comment</li>
      </ol>
    </nav>
    <h1 class="page-title">
      <i class="fas fa-comment me-2"></i>Edit Comment
    </h1>
    <div class="card posts-table-card">
      <div class="table-header">
        <div class="d-flex justify-content-between align-items-center">
          <h5><i class="fas fa-edit me-2"></i>Update Comment Details</h5>
          <%= link_to "Back to Post", admin_post_path(@post), class: "btn btn-outline-secondary btn-sm" %>
        </div>
      </div>
      <div class="card-body p-4">
        <%= form_with(model: [@post, @comment], url: admin_post_comment_path(@post, @comment),   class: "space-y-4") do |form| %>
          <% if @comment.errors.any? %>
            <div class="alert alert-danger">
              <h5 class="alert-heading"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h5>
              <ul class="mb-0">
                <% @comment.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="mb-4">
            <div class="author-info mb-3">
              <div class="author-avatar"><%= @comment.user.email[0].upcase %></div>
              <div>
                <div class="fw-semibold"><%= @comment.user.email %></div>
                <small class="text-muted"><%= @comment.created_at.strftime("%b %d, %Y at %I:%M %p") %></small>
              </div>
            </div>
            <%= form.label :content, "Comment Content", class: "form-label fw-semibold" %>
            <%= form.text_area :content, rows: 6, 
                            class: "form-control search-input",
                            placeholder: "Enter comment content..." %>
          </div>
          <div class="d-flex justify-content-between border-top pt-3">
            <div>
              <%= link_to "Delete Comment", admin_post_comment_path(@post, @comment), 
                        method: :delete, 
                        data: { confirm: "Are you sure you want to delete this comment?" },
                        class: "action-btn btn-delete" %>
            </div>
            <div>
              <%= link_to "Cancel", admin_post_path(@post), class: "action-btn btn-secondary me-2" %>
              <%= form.submit "Update Comment", class: "action-btn btn-edit" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
