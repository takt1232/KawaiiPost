<div class="container py-5">
  <h1 class="fw-bold brand-font text-primary mb-5">
    <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
  </h1>
  <div class="row mb-5">
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <p class="mb-0 fw-bold">Total Posts</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <p class="mb-0 fw-bold">Total Comments</p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-body text-center">
          <h2 class="display-4 fw-bold text-primary"><%= User.count %></h2>
          <p class="mb-0 fw-bold">Registered Users</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-6 mb-4">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-light">
          <h3 class="mb-0"><i class="fas fa-history me-2"></i>Recent Activity</h3>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
          </ul>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="card border-0 shadow-sm h-100">
        <div class="card-header bg-light">
          <h3 class="mb-0"><i class="fas fa-chart-line me-2"></i>Quick Actions</h3>
        </div>
        <div class="card-body">
        </div>
      </div>
    </div>
  </div>
</div>
